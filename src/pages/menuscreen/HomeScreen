import React, { Component } from 'react';

import { 
    View,
    Text,
    StyleSheet,
    TouchableOpacity,
    StatusBar
} from 'react-native';

import { Icon, Button, Container, Header, Content, Left, Right} from 'native-base'
import {Actions} from 'react-native-router-flux';

class HomeScreen extends Component {

    static navigationOptions = {
        drawerIcon : ({tintColor}) => (
            <Icon name="home" style={{fontSize: 24, color: tintColor}} />
        )
    }
    render() {
        return (
            <View style={styles.container}>
                <Header style={{backgroundColor: '#b71c1c'}}androidStatusBarColor="#7f0000">
                    <Left>
                        <Button transparent>
                            <Icon name="menu" onPress={()=>this.props.navigation.openDrawer()}/>
                        </Button>
                    </Left>
                    <Right />
                </Header>
                <View style={{flex: 1, alignItems: 'center', paddingVertical:10}}>
                    <Text style={{fontWeight: 'bold', color:"white"}}>Bem-vindo ao ParkingMap da PUCPR!</Text>
                    <View>
                        <TouchableOpacity style={styles.postContainer} title="Mapa dos Estacionamentos"
                            onPress={() => this.props.navigation.navigate('Map')}>
                            <Text>Mapa dos Estacionamentos</Text>
                        </TouchableOpacity>
                    </View>
                    <View>
                        <TouchableOpacity style={styles.postContainer} title="Pagamentos"
                            onPress={() => this.props.navigation.navigate('Payment')}>
                            <Text>Pagamentos</Text>
                        </TouchableOpacity>
                    </View>
                </View>
            </View>
        );
    }
    }
const styles = StyleSheet.create({
    container: {
        flex: 1,
        backgroundColor: '#de5d5d'
      },
    postContainer: {
        margin: 20,
        padding: 20,
        backgroundColor: "#FFF",
        borderRadius: 3
    }
  });
export default HomeScreen;
